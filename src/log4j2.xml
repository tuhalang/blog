<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
        <File name="FileAllLogs" fileName="logs/MyProj_all.txt" immediateFlush="true" append="true">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="FileAllLogs"/>
            <AppenderRef ref="Console" />
        </Root>

        <!--Bo log trong package testlog.package2-->
        <Logger name="testlog.package2" level="debug" additivity="false">

        </Logger>
    </Loggers>
</Configuration>